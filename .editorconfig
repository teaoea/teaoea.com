# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
spaces_around_operators = true

[{*.ts,*.html,*.scss,*.css}]
indent_size = 2
quote_type = double

[*.md]
max_line_length = off
trim_trailing_whitespace = false
